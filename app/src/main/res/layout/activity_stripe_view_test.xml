<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gmail.takashi316.tminchart.stripe.StripeViewTestActivity">

    <LinearLayout
        android:id="@+id/linearLayoutStripeViewTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <view
            android:id="@+id/view2"
            class="com.gmail.takashi316.tminchart.stripe.StripeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:background="#0000FF"
            app:gapInch="0.1"
            app:horizontal="false" />


        <view
            android:id="@+id/view2"
            class="com.gmail.takashi316.tminchart.stripe.StripeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:background="#00FF00"
            app:gapInch="0.2"
            app:vertical="false" />
    </LinearLayout>

    <fragment
        android:id="@+id/fragment"
        android:name="com.gmail.takashi316.tminchart.stripe.StripeFragment"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayoutStripeViewTest"
        android:layout_gravity="bottom"
        tools:layout="@layout/fragment_stripe" />

</RelativeLayout>
