<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="com.gmail.takashi316.tminchart.DisplayPropertyFragment"
    android:rowCount="8"
    android:columnCount="3">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="タッチパネルの物理的なピクセル数"
        android:id="@+id/textView2"
        android:layout_row="0"
        android:layout_column="0" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X="
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextRawWidth"
            android:layout_weight="1"
            android:layout_gravity="top"
            android:text="不明"
            android:editable="false"
            android:focusable="false"
            android:inputType="none|number"
            android:enabled="true" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y="
            android:id="@+id/textView5" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextRawHeight"
            android:text="不明"
            android:inputType="none|number"
            android:enabled="true"
            android:editable="false"
            android:focusable="false"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="アプリの表示可能領域のピクセル数"
        android:id="@+id/textView3"
        android:layout_row="1"
        android:layout_column="0" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X="
            android:id="@+id/textView6" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDisplaySizeX"
            android:text="不明"
            android:enabled="true"
            android:editable="false"
            android:focusable="false"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y="
            android:id="@+id/textView7" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editTextDisplaySizeY"
            android:layout_gravity="right|top"
            android:text="不明"
            android:enabled="true"
            android:editable="false"
            android:focusable="false"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="コンテンツの表示可能領域のピクセル数"
        android:id="@+id/textView"
        android:layout_row="2"
        android:layout_column="0" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X="
            android:id="@+id/textView10" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextViewWidth"
            android:text="不明"
            android:editable="false"
            android:focusable="false"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y="
            android:id="@+id/textView11"
             />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextViewHeight"
            android:text="不明"
            android:editable="false"
            android:focusable="false"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="density （論理ピクセル密度、160dpi比）"
        android:id="@+id/textView12"
        android:layout_row="3"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextDensity"
        android:layout_row="3"
        android:layout_column="1"
        android:text="不明"
        android:layout_columnSpan="2"
        android:editable="false"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="densityDpi（論理DPI）"
        android:id="@+id/textView13"
        android:layout_row="4"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:id="@+id/editTextDensityDpi"
        android:layout_row="4"
        android:layout_column="1"
        android:text="不明"
        android:layout_columnSpan="2"
        android:editable="false"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="heightPixels, widthPixels"
        android:id="@+id/textView14"
        android:layout_row="5"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextHeightPixels"
        android:layout_row="5"
        android:layout_column="1"
        android:text="不明"
        android:editable="false"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextWidthPixels"
        android:editable="false"
        android:layout_row="5"
        android:layout_column="2"
        android:text="不明"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="scaledDensity（修正されたdensity）"
        android:id="@+id/textView13"
        android:layout_row="6"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextScaledDensity"
        android:layout_columnSpan="2"
        android:editable="false"
        android:text="不明"
        android:focusable="false"
        android:layout_row="6"
        android:layout_column="1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xdpi, ydpi（X,y軸方向の物理DPI）"
        android:id="@+id/textView16"
        android:layout_row="7"
        android:layout_column="0" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextXDpi"
        android:layout_row="7"
        android:layout_column="1"
        android:editable="false"
        android:text="不明"
        android:focusable="false"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextYDpi"
        android:editable="false"
        android:layout_row="7"
        android:layout_column="2"
        android:text="不明"
        android:focusable="false"/>


</GridLayout>
